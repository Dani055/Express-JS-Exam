<h1>Projects</h1>
<form class="search" action='/project/search' method='GET'>
    <label>Seach: </label>
    <input type="text" name="text">
    <input type="submit" value="Search">
</form>

<div class="projects">
    {{#each projects}}
    <div class="project">
        <h2>{{this.name}}</h2>
        {{#if this.noTeam}}
            <h3>Team: No team assigned</h3>
        {{else}}
            <h3>Team: {{this.team.name}}</h3>
        {{/if}}            
        <p>Description: {{this.description}}</p>
    </div>
    {{/each}}
</div>